@model SDDFOS2021V1.Models.Menu

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Menu</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <b>Food Name</b>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FoodName)
            </dd>

            <dt>
                <b>Food Price</b>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FoodPrice)
            </dd>

            <dt>
                <b>Category</b>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FoodCategory)
            </dd>

            <dt>
                <b>Admin Name</b>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Admin.AdminName)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.MenuID }, new { @class = "btn btn-info btn-large" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-large" })
    </p>
</body>
</html>
