@model SDDFOS2021V1.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Customer Name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            <b>Contact Number</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerContactNumber)
        </dd>

        <dt>
            <b>Address</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerAddress)
        </dd>

        <dt>
            <b>Username</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerUsername)
        </dd>

        <dt>
